Program:
    match=Match
;

Match:
    '%match' '(' type=MatchType expr=ID ')' '{'
        cases*=Case
    '}'
;

Case:
    pat=Pattern block=Block
;

Pattern:
    ('[' pats*=Pattern[','] ']') | expr=Expression
;

Expression: (('%here' | Value | Cmp | Op)+) | (Op (Value | Cmp | Op)+) | (Cmp Value) | Value | '_';

Value: ID | NUMBER;

Cmp: '<=' | '>=' | '>' | '<';

Op: '+' | '-' | '*' | '/' | '.';

MatchType: (ID '[' ']') | (ID '*') | ID;

Block: '{' /.*/ '}';
