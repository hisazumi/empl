Program:
    match=Match
;

Match:
    'match' '(' type=MatchType expr=Expression ')' '{'
        cases*=Case
    '}'
;

Case:
    'case' pat=Pattern block=Block
;

Expression: ID | NUMBER | (Op ID) | (Op NUMBER);

Op: '<=' | '>=' | '>' | '<';

Pattern:
    ('[' pats*=Pattern[','] ']') | expr=Expression
;

MatchType:
    ID | ID '*'
;

Block:
    '{' /.*/ '}'
;
